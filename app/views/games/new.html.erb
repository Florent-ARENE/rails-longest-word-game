<div class="container">
  <div class="row justify-content-center">
    <h1>NEW GAME</h1>
    <div class="letters-flex">
      <% @letters.each do |letter| %>
      <div class="letter"><%= letter %></div>
      <% end %>
    </div>
      <form action="/score" method="post" data-turbo="false">
        <input type="hidden" name="letters" value="<%= @letters.join %>">
        <label for="score" class="form-label">What is the longest word you can find?</label>
        <div class="d-flex">
          <input type="text" name="score" id="score" value="" class="form-control">
          <input type="submit" value="play" class="btn btn-primary">
        </div>
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      </form>
  </div>
</div>
